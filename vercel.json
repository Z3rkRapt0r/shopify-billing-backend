{
  "buildCommand": "prisma generate && next build",
  "devCommand": "next dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["fra1"],
  "functions": {
    "app/api/cron/retry-pending/route.ts": {
      "maxDuration": 30
    },
    "app/api/admin/sync-customers/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/retry-pending",
      "schedule": "0 2 * * *"
    }
  ]
}